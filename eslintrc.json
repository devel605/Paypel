{
    "root":true,
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends":[ 
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "rules": {
        "no-console":"error",
        "linebreak-style":["warn", "windows"],
        "indent":"off",
        "eol-last":"off"
    }
}